{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">User Details</h1>

        <div class="card shadow-sm p-4">
            <table class="table table-bordered">
                <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td>{{ user.password }}</td>
                </tr>
                <tr>
                    <th>Prenom</th>
                    <td>{{ user.prenom }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ user.nom }}</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>{{ user.adresse }}</td>
                </tr>
                <tr>
                    <th>CP</th>
                    <td>{{ user.cp }}</td>
                </tr>
                <tr>
                    <th>Ville</th>
                    <td>{{ user.ville }}</td>
                </tr>
                <tr>
                    <th>Date Embauche</th>
                    <td>{{ user.dateEmbauche ? user.dateEmbauche|date('Y-m-d') : '' }}</td>
                </tr>
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Back to List</a>
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary">Edit</a>
        </div>

        <div class="mt-3">
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
