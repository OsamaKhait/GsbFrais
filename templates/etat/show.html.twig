{% extends 'base.html.twig' %}

{% block title %}View Etat{% endblock %}

{% block body %}
    <div class="container mx-auto my-8 p-6 bg-white rounded-lg shadow-lg">
        <h1 class="text-2xl font-bold text-gray-800 mb-6">Etat Details</h1>

        <table class="w-full border border-gray-300 bg-white text-gray-800 mb-6">
            <tbody>
            <tr class="border-t">
                <th class="px-4 py-2 text-left font-medium text-gray-700 w-1/3">Id</th>
                <td class="px-4 py-2">{{ etat.id }}</td>
            </tr>
            <tr class="border-t">
                <th class="px-4 py-2 text-left font-medium text-gray-700 w-1/3">Libelle</th>
                <td class="px-4 py-2">{{ etat.libelle }}</td>
            </tr>
            </tbody>
        </table>

        <div class="flex space-x-4">
            <a
                    href="{{ path('app_etat_index') }}"
                    class="inline-block px-4 py-2 bg-gray-500 text-white font-medium rounded-md hover:bg-gray-600 focus:outline-none focus:ring focus:ring-gray-300 transition duration-150"
            >
                &larr; Back to List
            </a>
            <a
                    href="{{ path('app_etat_edit', {'id': etat.id}) }}"
                    class="inline-block px-4 py-2 bg-blue-500 text-white font-medium rounded-md hover:bg-blue-600 focus:outline-none focus:ring focus:ring-blue-300 transition duration-150"
            >
                Edit
            </a>
            {{ include('etat/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
