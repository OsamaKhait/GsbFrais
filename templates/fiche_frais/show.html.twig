{% extends 'base.html.twig' %}

{% block title %}FicheFrais{% endblock %}

{% block body %}
    <div class="container mx-auto my-8 p-6 bg-white rounded-lg shadow-md">
        <h1 class="text-3xl font-semibold text-gray-800 mb-6">FicheFrais Details</h1>

        <table class="min-w-full table-auto border-collapse border border-gray-300 rounded-md overflow-hidden">
            <tbody class="divide-y divide-gray-200">
            <tr>
                <th class="px-4 py-2 text-sm font-medium text-gray-600">Id</th>
                <td class="px-4 py-2 text-sm text-gray-700">{{ fiche_frai.id }}</td>
            </tr>
            <tr>
                <th class="px-4 py-2 text-sm font-medium text-gray-600">Mois</th>
                <td class="px-4 py-2 text-sm text-gray-700">{{ fiche_frai.mois }}</td>
            </tr>
            <tr>
                <th class="px-4 py-2 text-sm font-medium text-gray-600">NbJustificatifs</th>
                <td class="px-4 py-2 text-sm text-gray-700">{{ fiche_frai.nbJustificatifs }}</td>
            </tr>
            <tr>
                <th class="px-4 py-2 text-sm font-medium text-gray-600">MontantValid</th>
                <td class="px-4 py-2 text-sm text-gray-700">{{ fiche_frai.montantValid }}</td>
            </tr>
            <tr>
                <th class="px-4 py-2 text-sm font-medium text-gray-600">DateModif</th>
                <td class="px-4 py-2 text-sm text-gray-700">{{ fiche_frai.dateModif ? fiche_frai.dateModif|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <div class="mt-6 flex space-x-4">
            <a
                    href="{{ path('app_fiche_frais_index') }}"
                    class="inline-block px-6 py-2 bg-gray-500 text-white font-medium rounded-md hover:bg-gray-600 focus:outline-none focus:ring focus:ring-gray-300 transition duration-150"
            >
                Back to List
            </a>

            <a
                    href="{{ path('app_fiche_frais_edit', {'id': fiche_frai.id}) }}"
                    class="inline-block px-6 py-2 bg-blue-500 text-white font-medium rounded-md hover:bg-blue-600 focus:outline-none focus:ring focus:ring-blue-300 transition duration-150"
            >
                Edit
            </a>
        </div>

        <div class="mt-6">
            {{ include('fiche_frais/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
