<form
        method="post"
        action="{{ path('app_fiche_frais_delete', {'id': fiche_frai.id}) }}"
        onsubmit="return confirm('Are you sure you want to delete this item?');"
        class="inline-block"
>
    <input
            type="hidden"
            name="_token"
            value="{{ csrf_token('delete' ~ fiche_frai.id) }}"
    >
    <button
            type="submit"
            class="px-4 py-2 bg-red-500 text-white font-semibold rounded-lg shadow-md hover:bg-red-600 focus:outline-none focus:ring focus:ring-red-300 focus:ring-offset-2 focus:ring-offset-gray-100 transition duration-150 ease-in-out"
    >
        Delete
    </button>
</form>
