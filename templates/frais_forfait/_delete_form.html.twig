<form
        method="post"
        action="{{ path('app_frais_forfait_delete', {'id': frais_forfait.id}) }}"
        onsubmit="return confirm('Are you sure you want to delete this item?');"
        class="inline-block"
>
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ frais_forfait.id) }}">

    <button
            type="submit"
            class="px-6 py-2 bg-red-600 text-white font-medium rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 transition duration-150"
    >
        Delete
    </button>
</form>
