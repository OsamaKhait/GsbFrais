{% extends 'base.html.twig' %}

{% block title %}FraisForfait{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto p-6 bg-white rounded-lg shadow-md">
        <h1 class="text-3xl font-semibold text-gray-800 mb-6">FraisForfait Details</h1>

        <table class="min-w-full table-auto border-collapse">
            <tbody class="text-gray-700">
            <tr class="border-b">
                <th class="px-4 py-2 text-left font-medium">Id</th>
                <td class="px-4 py-2">{{ frais_forfait.id }}</td>
            </tr>
            <tr class="border-b">
                <th class="px-4 py-2 text-left font-medium">Libelle</th>
                <td class="px-4 py-2">{{ frais_forfait.libelle }}</td>
            </tr>
            <tr class="border-b">
                <th class="px-4 py-2 text-left font-medium">Montant</th>
                <td class="px-4 py-2">{{ frais_forfait.montant }}</td>
            </tr>
            </tbody>
        </table>

        <div class="mt-6 space-x-4">
            <a href="{{ path('app_frais_forfait_index') }}"
               class="inline-block px-6 py-2 bg-gray-500 text-white font-medium rounded-md hover:bg-gray-600 focus:outline-none focus:ring focus:ring-gray-300 transition duration-150">
                Back to List
            </a>
            <a href="{{ path('app_frais_forfait_edit', {'id': frais_forfait.id}) }}"
               class="inline-block px-6 py-2 bg-green-600 text-white font-medium rounded-md hover:bg-green-700 focus:outline-none focus:ring focus:ring-green-300 transition duration-150">
                Edit
            </a>
        </div>

        <div class="mt-6">
            {{ include('frais_forfait/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
