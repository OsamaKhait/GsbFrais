{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto p-6 bg-white rounded-lg shadow-md">
        <h1 class="text-3xl font-semibold text-gray-800 mb-6 text-center">Inscription</h1>

        {% if form_errors(registrationForm) %}
            <div class="p-4 mb-4 text-sm text-red-700 bg-red-100 border border-red-200 rounded-lg">
                {{ form_errors(registrationForm) }}
            </div>
        {% endif %}

        {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}

        <!-- Champ Email -->
        <div>
            {{ form_label(registrationForm.email, 'Adresse e-mail', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            <div class="mt-1">
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control w-full p-2 border border-gray-300 rounded-lg', 'placeholder': 'Entrez votre adresse e-mail'}}) }}
            </div>
        </div>

        <!-- Champ Mot de passe -->
        <div>
            {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            <div class="mt-1">
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control w-full p-2 border border-gray-300 rounded-lg', 'placeholder': 'Entrez un mot de passe sécurisé'}}) }}
            </div>
        </div>

        <!-- Champ Nom -->
        <div>
            {{ form_label(registrationForm.Nom, 'Nom', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            <div class="mt-1">
                {{ form_widget(registrationForm.Nom, {'attr': {'class': 'form-control w-full p-2 border border-gray-300 rounded-lg', 'placeholder': 'Entrez votre nom'}}) }}
            </div>
        </div>

        <!-- Champ Prénom -->
        <div>
            {{ form_label(registrationForm.Prenom, 'Prénom', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            <div class="mt-1">
                {{ form_widget(registrationForm.Prenom, {'attr': {'class': 'form-control w-full p-2 border border-gray-300 rounded-lg', 'placeholder': 'Entrez votre prénom'}}) }}
            </div>
        </div>

        <!-- Champ Adresse -->
        <div>
            {{ form_label(registrationForm.adresse, 'Adresse', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            <div class="mt-1">
                {{ form_widget(registrationForm.adresse, {'attr': {'class': 'form-control w-full p-2 border border-gray-300 rounded-lg', 'placeholder': 'Entrez votre adresse'}}) }}
            </div>
        </div>

        <!-- Champ Code postal -->
        <div>
            {{ form_label(registrationForm.cp, 'Code postal', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            <div class="mt-1">
                {{ form_widget(registrationForm.cp, {'attr': {'class': 'form-control w-full p-2 border border-gray-300 rounded-lg', 'placeholder': 'Entrez votre code postal'}}) }}
            </div>
        </div>

        <!-- Champ Ville -->
        <div>
            {{ form_label(registrationForm.ville, 'Ville', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            <div class="mt-1">
                {{ form_widget(registrationForm.ville, {'attr': {'class': 'form-control w-full p-2 border border-gray-300 rounded-lg', 'placeholder': 'Entrez votre ville'}}) }}
            </div>
        </div>

        <!-- Champ Date d'embauche -->
        <div>
            {{ form_label(registrationForm.dateEmbauche, "Date d'embauche", {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            <div class="mt-1">
                {{ form_widget(registrationForm.dateEmbauche, {'attr': {'class': 'form-control w-full p-2 border border-gray-300 rounded-lg'}}) }}
            </div>
        </div>

        <!-- Champ Conditions générales -->
        <div class="flex items-center">
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
            <label for="{{ registrationForm.agreeTerms.vars.id }}" class="ml-2 text-sm text-gray-700">
                J'accepte les conditions générales
            </label>
        </div>

        <!-- Bouton d'envoi -->
        <div class="text-center">
            <button type="submit" class="w-full py-2 px-4 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400">
                S'inscrire
            </button>
        </div>

        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
